#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#DH_VERBOSE = 1

# see EXAMPLES in dpkg-buildflags(1) and read /usr/share/dpkg/*
DPKG_EXPORT_BUILDFLAGS = 1
include /usr/share/dpkg/default.mk

YAS_INSTALL_DIR = $(CURDIR)/debian/usr/share/yasnippet-snippets 

# main packaging script based on dh7 syntax
%:
	dh $@ 

override_dh_auto_build:
	mkdir -p $(YAS_INSTALL_DIR)
	find -maxdepth 1 -type d ! -name debian ! -name ".*" | xargs cp -rt $(YAS_INSTALL_DIR)
	find $(YAS_INSTALL_DIR) -type f -executable -exec chmod -x {} +

override_dh_auto_clean:
	rm -rf $(YAS_INSTALL_DIR)



